<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InfoTextStyle">
        <item name="android:textColor">@color/black_70</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GalleryTitleTextStyle">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PerkTitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:layout_marginTop">@dimen/gallery_item_top_margin</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>